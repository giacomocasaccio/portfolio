            { icon: 'bar-chart-3', title: 'Adloop Certified Professional', description: 'Analisi, attribuzione e ottimizzazione del budget per massimizzare il ROAS.' }
        ];

        const experienceData = [
             { 
                title: 'Digital Sales & Marketing Specialist', 
                company: 'Vivi Energia', period: '2023 - Oggi',
                description: [
                    'Gestione delle vendite digitali e canali di acquisizione online.', 
                    'Sviluppo e ottimizzazione campagne marketing (focus: Google Ads, Meta Ads, Bing Ads).', 
